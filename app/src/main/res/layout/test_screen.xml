<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff808080">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Pattern"
        android:id="@+id/makePattern"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff808080"
        android:indeterminate="false"
        android:progressTint="#ff000000"
        android:thumbTint="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/seekBar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftFocusRing"
        android:src="@drawable/focalring"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightFocusRing"
        android:src="@drawable/focalring"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/leftFocusRing"
        android:layout_toRightOf="@+id/makePattern"
        android:layout_toEndOf="@+id/makePattern" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rightGrating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightGrating"
            android:src="@drawable/ic_launcher"
            android:layout_alignTop="@+id/leftGrating"
            android:layout_toRightOf="@+id/makePattern"
            android:layout_toEndOf="@+id/makePattern"
            android:layout_marginLeft="450dp"
            android:layout_alignParentStart="false"
            android:layout_marginTop="145dp"
            android:layout_gravity="left|top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftGrating"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="left|top"
            android:layout_above="@+id/makePattern"
            android:layout_alignRight="@+id/leftFocusRing"
            android:layout_alignEnd="@+id/leftFocusRing"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="160dp" />
    </FrameLayout>

</RelativeLayout>